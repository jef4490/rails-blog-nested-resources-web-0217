<p id="notice"><%= notice %></p>

<h3>Title:</h3>
<%= @post.name %>
<h3>Content:</h3>
<%= @post.content %>
<h3>Tags:</h3>
<ul>
  <% @post.tags.each do |tag| %>
  <li><%= tag.name %></li>
  <% end %>
</ul>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<br><br>
<h2>Comments:</h2>

<% @post.comments.each do |comment| %>
    <p><%= comment.content %> </p>
  <% end %>

<%= form_tag(post_comments_path(@post.id), action: "POST") do %>
  <%= label_tag "Content" %>
  <%= text_field_tag "post[content]", nil, id: "Content" %>
  <%= submit_tag "Create Comment"%>
<% end %>
